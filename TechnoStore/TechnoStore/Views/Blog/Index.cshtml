@using TechnoStore.ViewModels
@model BlogVm
<section class="main-blog">
			<div class="container">
				<div class="row">
					<div class="col-md-8 col-lg-9">
						<div class="post-wrap">
					@foreach(var item in Model.PaginatedBlogs)
					{
						<article class="main-post style1">
							<div class="featured-post">
								<a asp-action="detail" asp-route-id="@item.Id" asp-controller="blog" title="">
									<img src="~/uploads/blogs/@item.ImageUrl" alt="">
								</a>
							</div><!-- /.featured-post -->
							<div class="content-post">
								<h3 class="title-post">
									<a href="#" title="">@item.Title</a>
								</h3>
								<ul class="meta-post">
									<li class="comment">
										<a href="#" title="">
											2 Comments
										</a>
									</li>
									<li class="date">
										<a href="#" title="">
											@item.CreatedDate.ToString("MMM dd")
										</a>
									</li>
								</ul>
								<div class="entry-post">
									<p>@item.Description</p>
									<div class="more-link">
										<a asp-action="detail" asp-route-id="@item.Id" asp-controller="blog" title="">
											Read More
											<span>
												<img src="~/images/icons/right-2.png" alt="">
											</span>
										</a>
									</div>
								</div>
							</div><!-- /.content-post -->
						</article>

						<!-- /.main-post style1 -->
					}

						</div><!-- /.post-wrap -->
						<div class="blog-pagination style2">
							<ul class="flat-pagination">
						<nav aria-label="...">
							<ul class="flat-pagination style1">
								<li class="prev">
									<a asp-action="Index" asp-route-page="@(Model.PaginatedBlogs.ActivePage - 1)" title="">
										<img src="~/images/icons/left-1.png" alt="">Prev Page
									</a>
								</li>

								@for (int i = 1; i <= Model.PaginatedBlogs.TotalPageCount; i++)
								{
									<li class=" @(Model.PaginatedBlogs.ActivePage == i  ? "active" : "")"><a class="waves-effect" asp-action="Index" asp-route-page="@i">@i</a></li>
								}
								<li class="next">
									<a asp-action="Index" asp-route-page="@(Model.PaginatedBlogs.ActivePage + 1)" title="">
										Next Page<img src="~/images/icons/right-1.png" alt="">
									</a>
								</li>
							</ul>
						</nav>
							</ul><!-- /.flat-pagination -->
						</div><!-- /.blog-pagination style2 -->
					</div><!-- /.col-md-8 col-lg-9 -->
					<div class="col-md-4 col-lg-3">
						<div class="sidebar left">
							<div class="widget widget-search">
								<form asp-action="index" asp-controller="blog" method="get" accept-charset="utf-8">
									<input type="text" name="widget-search" placeholder="Search">
								</form>
							</div><!-- /.widget widget-search -->
							<div class="widget widget-categories">
								<div class="widget-title">
									<h3>Categories</h3>
								</div>
								<ul class="cat-list">
							@foreach(var item in Model.BlogCategories)
							{
								<li>
									<a href="#" title="">@item.Name<span>(03)</span></a>
								</li>
							}

								</ul>
							</div><!-- /.widget widget-categories -->
							<div class="widget widget-tags">
								<div class="widget-title">
									<h3>Popular Tags</h3>
								</div>
								<ul class="tag-list">
							@foreach(var item in Model.Tags)
							{
								<li>
									<a href="#" class="waves-effect waves-teal" title="">@item.Name</a>
								</li>
							}

								</ul>
							</div><!-- /.widget widget-tags -->
						</div><!-- /.sidebar left -->
					</div><!-- /.col-md-4 col-lg-3 -->
				</div><!-- /.row -->
			</div><!-- /.container -->
		</section><!-- /.main-blog -->

	