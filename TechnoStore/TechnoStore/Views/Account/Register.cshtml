@using TechnoStore.ViewModels
@model MemberRegisterVm
<section class="flat-account background">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="container"> 
					<div class="form-register">
						<div class="title">
							<h3>Register</h3>
						</div>
						<form asp-action="Register" method="post" id="form-register" accept-charset="utf-8">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-box">
								<label for="name-register">Name </label>
								<input asp-for="Name" id="name-register">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div><!-- /.form-box -->
							<div class="form-box">
								<label for="name-register">Surname</label>
								<input asp-for="Surname" id="name-register">
								<span asp-validation-for="Surname" class="text-danger"></span>
							</div><!-- /.form-box -->
							<div class="form-box">
								<label for="name-register">Email address * </label>
								<input asp-for="Email" id="name-register">
								<span asp-validation-for="Email" class="text-danger"></span>
							</div><!-- /.form-box -->
							<div class="form-box">
								<label for="name-register"> Password</label>
								<input asp-for="Password" id="name-register">
								<span asp-validation-for="Password" class="text-danger"></span>
							</div><!-- /.form-box -->
							<div class="form-box">
								<label for="password-register"> ConfirmPassword</label>
								<input asp-for="ConfirmPassword" id="password-register">
								<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
							</div>
							<div class="form-box">
								<button type="submit" class="register">Register</button>
							</div><!-- /.form-box -->
						</form><!-- /#form-register -->
					</div><!-- /.form-register -->
						</div>
					</div><!-- /.col-md-6 -->
				</div><!-- /.row -->
			</div><!-- /.container -->
		</section><!-- /.flat-account -->


		<section class="flat-row flat-iconbox style1 background">
			<div class="container">
				<div class="row">
					<div class="col-md-6 col-lg-3">
						<div class="iconbox style1 v1">
							<div class="box-header">
								<div class="image">
									<img src="~/images/icons/car.png" alt="">
								</div>
								<div class="box-title">
									<h3>Worldwide Shipping</h3>
								</div>
								<div class="clearfix"></div>
							</div><!-- /.box-header -->
						</div><!-- /.iconbox -->
					</div><!-- /.col-md-6 col-lg-3 -->
					<div class="col-md-6 col-lg-3">
						<div class="iconbox style1 v1">
							<div class="box-header">
								<div class="image">
									<img src="~/images/icons/order.png" alt="">
								</div>
								<div class="box-title">
									<h3>Order Online Service</h3>
								</div>
								<div class="clearfix"></div>
							</div><!-- /.box-header -->
						</div><!-- /.iconbox -->
					</div><!-- /.col-md-6 col-lg-3 -->
					<div class="col-md-6 col-lg-3">
						<div class="iconbox style1 v1">
							<div class="box-header">
								<div class="image">
									<img src="~/images/icons/payment.png" alt="">
								</div>
								<div class="box-title">
									<h3>Payment</h3>
								</div>
								<div class="clearfix"></div>
							</div><!-- /.box-header -->
						</div><!-- /.iconbox -->
					</div><!-- /.col-md-6 col-lg-3 -->
					<div class="col-md-6 col-lg-3">
						<div class="iconbox style1 v1">
							<div class="box-header">
								<div class="image">
									<img src="~/images/icons/return.png" alt="">
								</div>
								<div class="box-title">
									<h3>Return 30 Days</h3>
								</div>
								<div class="clearfix"></div>
							</div><!-- /.box-header -->
						</div><!-- /.iconbox -->
					</div><!-- /.col-md-6 col-lg-3 -->
				</div><!-- /.row -->
			</div><!-- /.container -->
		</section><!-- /.flat-iconbox -->

	