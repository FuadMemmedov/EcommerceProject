@using TechnoStore.ViewModels
@model List<BasketItemVm>
@{
    decimal? itemAmount = Model.Sum(item => item.Price - item.Price * item.DiscountPercent / 100);
    decimal? totalAmount = Model.Sum(item => itemAmount * item.Count);
}

<section class="flat-shop-cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="flat-row-title style1">
                    <h3>Shopping Cart</h3>
                </div>
                <div class="table-cart">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="cart-items">
                            @foreach (var item in Model)
                            {
                                <tr class="basket-item" data-product-id="@item.ProductId">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="img-product">
                                                <img src="~/uploads/products/@item.ImageUrl" alt="">
                                            </div>
                                            <div class="ms-3">
                                                <div class="name-product">@item.Name</div>
                                                <div class="price">$@(item.Price - item.Price * item.DiscountPercent / 100)</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="quantity">
                                            <span class="btn-change-quantity decrease" data-action="decrease" title="Decrease Quantity">
                                                <i class="fa fa-minus"></i>
                                            </span>
                                            <input type="number" name="number" value="@item.Count" min="1" max="100" placeholder="Quantity">
                                            <span class="btn-change-quantity increase" data-action="increase" title="Increase Quantity">
                                                <i class="fa fa-plus"></i>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="total">$@((item.Price - item.Price * item.DiscountPercent / 100 )* item.Count)</div>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-sm remove-item-btn" title="Remove">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.table-cart -->
            </div><!-- /.col-lg-8 -->
            <div class="col-lg-4">
                <div class="cart-totals">
                    <h3>Cart Totals</h3>
                    <form action="#" method="get" accept-charset="utf-8">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Subtotal</td>
                                    <td class="subtotal">$@totalAmount</td>
                                </tr>
                                <tr>
                                    <td>Total</td>
                                    <td class="price-total">$@totalAmount</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btn-cart-totals">
                            <a asp-action="checkout" asp-controller="shop" class="btn btn-success checkout" title="">Proceed to Checkout</a>
                        </div><!-- /.btn-cart-totals -->
                    </form><!-- /form -->
                </div><!-- /.cart-totals -->
            </div><!-- /.col-lg-4 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- /.flat-shop-cart -->

<section class="flat-row flat-iconbox style3">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="iconbox style1">
                    <div class="box-header">
                        <div class="image">
                            <img src="~/images/icons/car.png" alt="">
                        </div>
                        <div class="box-title">
                            <h3>Worldwide Shipping</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-lg-3 col-md-6 -->
            <div class="col-lg-3 col-md-6">
                <div class="iconbox style1">
                    <div class="box-header">
                        <div class="image">
                            <img src="~/images/icons/order.png" alt="">
                        </div>
                        <div class="box-title">
                            <h3>Order Online Service</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-lg-3 col-md-6 -->
            <div class="col-lg-3 col-md-6">
                <div class="iconbox style1">
                    <div class="box-header">
                        <div class="image">
                            <img src="~/images/icons/payment.png" alt="">
                        </div>
                        <div class="box-title">
                            <h3>Payment</h3>
                        </div>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                </div><!-- /.iconbox -->
            </div><!-- /.col-lg-3 col-md-6 -->
            <div class="col-lg-3 col-md-6">
                <div class="iconbox style1">
                    <div class="box-header">
                        <div class="image">
                            <img src="~/images/icons/return.png" alt="">
