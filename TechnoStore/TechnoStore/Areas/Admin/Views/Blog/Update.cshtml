@using Business.DTOs.BlogDTOs
@model BlogUpdateDTO
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">DeDescriptionsignation</label>
                    <input asp-for="Description" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">ImageFile</label>
                    <input asp-for="ImageFile" class="form-control" id="exampleInputEmail1">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Tags</label>
                    <select asp-for="TagIds" class="form-control" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))"></select>
                    <span asp-validation-for="TagIds" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="BlogCategoryId" class="form-label">Category Name</label>
                    <select asp-for="BlogCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.BlogCategories, "Id", "Name"))" id="BlogCategoryId"></select>
                    <span asp-validation-for="BlogCategoryId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>